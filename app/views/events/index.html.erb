<h1><%= t :next_event %></h1>

<table>

<%if @event %>
  <tr>
    <td><%= @event.start %></td>
    <td></td>
    <td><%= @event.user.email %></td>
    <td><%= link_to 'Edit', edit_event_path(@event) %></td>
  </tr>
  <tr>
    <th><%=t :movie%></th>
    <th><%=t :average%></th>
    <th><%=t :your_rating%></th>
  </tr>
<% @event.selections.each do |selection| %>
  <tr>
    <td><%= selection.movie.name %></td>
    <td> <%= ratings_for selection, :dimension => :preference, :force_static => true%></td>
    
    <td><%= ratings_for selection, :show_user_rating => true,  :dimension => :preference %>
      </td>
  </tr>
<% end %>
<% else %>
  <tr><td colspan="4"><%= t :no_event %></td></tr>
<% end %>
</table>

<br />
<% if user_signed_in? %>
<%= link_to t(:new_event), new_event_path %>
<% else %>
  <%= t :please_sign_in %>
<% end %>
